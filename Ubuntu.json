{
    "builders": [
        {
            "accelerator": "tcg",
            "boot_command": [
                "<wait10>"
            ],
            "boot_wait": "2m",
            "disk_interface": "virtio",
            "disk_size": 5000,
            "format": "raw",
            "headless": false,
            "iso_checksum": "{{user `sum_local`}}",
            "iso_checksum_type": "md5",
            "iso_url": "{{user `url_local`}}",
            "net_device": "virtio-net",
            "output_directory": "RPiBuntu",
            "qemu_binary": "qemu-system-arm",
            "qemuargs": [
                [
                    "-m",
                    "1024"
                ],
                [
                    "-machine",
                    "vexpress-a9,accel=tcg"
                ],
                [
                    "-device",
                    "virtio-net-device,netdev=user.0"
                ],
                [
                    "-drive",
                    "file={{user `url_local`}},if=sd,cache=writeback"
                ],
                [
                    "-netdev",
                    "user,id=user.0"
                ],
                [
                    "-cpu",
                    "cortex-a9"
                ],
                [
                    "-kernel",
                    "{{user `kernel`}}"
                ],
                [
                    "-append",
                    "root=/dev/mmcblk0p2 vga=normal mem=1024M devtmpfs.mount=0 rw"
                ],
                [
                    "-net",
                    "nic,macaddr=00:16:3e:00:00:01"
                ],
                [
                    "-net",
                    "user,hostfwd=tcp::2223-:22"
                ],
                [
                    "-initrd",
                    "{{user `initrd`}}"
                ],
                [
                    "-display",
                    "{{user `display`}}"
                ],
                [
                    "-boot",
                    "order=ncd"
                ]
            ],
            "shutdown_command": "echo '{{user `password_acc`}}' | sudo -ES poweroff",
            "ssh_host_port_max": 2230,
            "ssh_password": "{{user `password_acc`}}",
            "ssh_username": "{{user `user_acc`}}",
            "ssh_wait_timeout": "30m",
            "type": "qemu",
            "vm_name": "RPiBuntu"
        }
    ],
    "provisioners": [
        {
            "execute_command": "echo '{{user `password_acc`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "start_retry_timeout": "5m",
            "scripts": [
                "scripts/ubuntu/update.sh",
                "scripts/ubuntu/recreatePartition.sh",
                "scripts/raspbian/reboot.sh",
                "scripts/ubuntu/resizePartition.sh",
                "scripts/common/installSoftware.sh"
            ],
            "type": "shell"
        },
        {
            "destination": "~/client.rb",
            "source": "files/client.rb",
            "type": "file"
        },
        {
            "destination": "~/validation.pem",
            "source": "files/validation.pem",
            "type": "file"
        },
        {
            "execute_command": "echo '{{user `password_acc`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "start_retry_timeout": "5m",
            "scripts": [
                "scripts/common/moveFiles.sh",
                "scripts/common/runChef.sh"
            ],
            "type": "shell"
        }
    ],
    "variables": {
        "password_acc": "hybris",
        "sum_local": "temporary",
        "url_local": "temporary",
        "user_acc": "hybris",
        "display" : "none",
        "kernel" : "kernelfile",
        "initrd": "initrdfile"
    }
}
